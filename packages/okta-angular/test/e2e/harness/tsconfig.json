{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": ".",
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ],
      "@okta/okta-angular": [
        "../../../../dist"
      ]
    },
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": false,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types",
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "exclude": [
    "**/node_modules"
  ]
}
