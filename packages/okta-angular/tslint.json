{
    "extends": [
        "tslint-angular"
    ],
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            [
                "dir",
                "dir"
            ],
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            [
                "cmp",
                "cmp"
            ],
            "kebab-case"
        ]
    }
}